[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Operation = Remove
Target = *

[Action]
Description = Notifying of orphaned packages
When = PostTransaction
Exec = /usr/bin/bash -c "/usr/bin/pacman -Qtd && echo "Remove with pacmanremoveorphans or mark explicit with `-D --asexplicit`" || /usr/bin/echo '=> None found.'"
